# This script must be sudo authorized for _www to run as podclient
# creates a thumbnail on the remote server and copies it locally

SLIDE_IP=$1
IMG_FILE=$2
IMG_TMP_FILE=$3

scp -o ConnectTimeout=10 $SLIDE_IP:$IMG_FILE $IMG_TMP_FILE
       