#include localdefs
source $(dirname $0)/localdefs

if [ $# -eq 0 ]
then 
    CALLS=1
else 
    CALLS=$1
fi
#copy saved QTB prefs to the working prefs. This is done to avoid bad/destroyed prefs
#cp $EZCASTDIR/etc/com.apple.QuickTime\ Broadcaster.plist $USERQTBPREFS

if [ "$RECORD_TYPE" == "cam" ]
then
    osascript $EZCASTDIR/applescript/qtnewmovie.scpt&
else 
    osascript $EZCASTDIR/applescript/qtnewscreen.scpt&
fi
wait
#sleep 4
$EZCASTDIR/bash/resetpositions
#osascript $EZCASTDIR/applescript/positionqt.scpt
$EZCASTDIR/bash/qtcheck $CALLS 