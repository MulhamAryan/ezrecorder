#include localdefs
source $(dirname $0)/localdefs

#filename and path of the result (cropped) image
LOCALSCREENSHOTPATH=$1

#take the snapshot and send it to the fifo
#screencapture -x -t tiff /tmp/screencapture.tiff
#warning CICrop rectangle=x_origin,y_origin,width,height 0,0 point is at bottom left!
#$EZCASTDIR/bin/CoreImageTool load myimage /tmp/screencapture.tiff filter myimage CICrop rectangle=350,650,290,205 store myimage $LOCALSCREENSHOTPATH public.jpeg&

seek_duration=`$FFPROBE_PATH -show_streams "$RECORDDIR/${COMMON_MOVIE_NAME}.f4v" 2> /dev/null | awk -F= '/^duration=/ { print $2-1 }' | awk 'NR>1{ print $1 }'` 
$FFMPEG_PATH -y -ss $seek_duration -i $RECORDDIR/${COMMON_MOVIE_NAME}.f4v -vframes 1 -s 427x240 $LOCALSCREENSHOTPATH 

echo $seek_duration >> /Library/ezrecorder/modules/cli_fmle/var/duration